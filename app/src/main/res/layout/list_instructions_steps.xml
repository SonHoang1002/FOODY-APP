<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    android:layout_margin="4dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_instructions_step_number"
                android:text="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/orange"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_instructions_step_title"
                android:text="Step Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textAlignment="textStart"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipments"
                android:textStyle="italic"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/orange"
                android:textAlignment="textStart"

                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_instructions_equipment"
                android:layout_margin="4dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textStyle="italic"
                android:textSize="18sp"
                android:padding="8dp"
                android:textColor="@color/orange"
                android:textAlignment="textStart"

                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_instructions_ingredient"
                android:layout_margin="4dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>